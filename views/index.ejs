<!DOCTYPE html>
<html lang="en">
  <%- include('partials/header') %>
  <body class="bg-light">
    <div class="container py-5">
      <h1 class="mb-4">ğŸ“ Task List</h1>
      <form class="input-group mb-4" method="POST" action="/tasks">
        <input
          name="title"
          class="form-control outline-none"
          placeholder="New task..."
          required
        />
        <button class="btn btn-primary">Add</button>
      </form>
      <ul class="list-group">
        <% if (tasks.length === 0) { %>
        <li class="list-group-item text-muted">No tasks yet.</li>
        <% } else { %> <% tasks.forEach(t => { %>
        <li
          class="list-group-item d-flex justify-content-between align-items-center"
        >
          <span
            class="<%= t.done ? 'text-decoration-line-through text-muted' : '' %>"
          >
            <%= t.title %>
          </span>
          <div>
            <form
              method="POST"
              action="/tasks/<%= t._id %>/toggle"
              class="d-inline"
            >
              <button class="btn btn-sm btn-outline-success">
                <%= t.done ? 'Undo' : 'Done' %>
              </button>
            </form>
            <form
              method="POST"
              action="/tasks/<%= t._id %>/delete"
              class="d-inline"
            >
              <button class="btn btn-sm btn-outline-danger">Delete</button>
            </form>
          </div>
        </li>
        <% }) %> <% } %>
      </ul>
    </div>
    <%- include('partials/footer') %>
  </body>
</html>
